 create table salary
  (eId varchar2(5),
  sMonth date,
  sYear date,
  basic number(8),
  da number(8),
  allowance number(8),
  hra number(8),
  total number(8),
  gpf number(8),
  gip number(5),
  iTax number(8),
  loan number(8),
  totDed number(8),
  netPay number(10)
